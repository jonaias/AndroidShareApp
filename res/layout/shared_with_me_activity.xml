<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@color/screen_background">
  
    <LinearLayout
    	android:layout_height="wrap_content" 
    	android:layout_width="match_parent">
    	
        <Button android:id="@+id/backButton" 
        	android:background ="@drawable/left_arrow"
        	android:layout_width="50dp"
        	android:layout_height="47dp"
   		/>
        
        <EditText android:layout_width="wrap_content" 
        	android:id="@+id/shareNameText"
        	android:layout_weight="1" 
        	android:layout_height="wrap_content"
        	android:enabled="false"
        />
        
    </LinearLayout>
    
    <TextView
		android:text="@string/shared_with_me"
		android:layout_height="25dip"
		android:layout_width="match_parent"
		android:gravity="center"
		android:background="@drawable/my_shares_background"
		android:textColor="#FFFFFF"
		android:layout_marginTop="7dip"
		android:layout_marginLeft="7dip"
		android:layout_marginRight="7dip"
	/>
	
	<ListView android:id="@+id/android:list"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:drawSelectorOnTop="false"
		android:layout_marginLeft="7dip"
		android:layout_marginRight="7dip"
		android:cacheColorHint="#00000000"
		android:background="@drawable/list_background"
		android:divider="#FFFFFF"
		android:layout_weight="1" 
	/>
	
	<LinearLayout  
			android:layout_height="wrap_content" 
			android:layout_width="match_parent">
			
			<Button android:layout_width="wrap_content" 
				android:id="@+id/sendButton"
				android:layout_height="wrap_content" 
				android:text="@string/send"
				android:background="@drawable/flag_2"
				android:textColor="@android:color/black"
				android:textStyle="bold"
				android:textSize="20dp"
			/>
				
			<EditText
			    android:id="@+id/infoText"
			    android:layout_width="200dp"
			    android:layout_height="match_parent"
			    android:enabled="false"
			    android:inputType="textMultiLine"
			    android:lines="3"
			    android:text="@string/select_a_file_tip"
			    android:textSize="13dp" 
			    android:background="@color/screen_background"/>
			
			<Button android:id="@+id/downloadButton" 
        	android:background ="@drawable/down_arrow"
        	android:layout_width="50dp"
        	android:layout_height="47dp"
        	android:visibility="invisible"
   			/>
				
	</LinearLayout>
	
</LinearLayout>
